{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ESNext"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist"
  },
  "include": ["lib/**/*.d.ts", "lib/**/*.ts"],
  "exclude": ["node_modules", "dist", "*.spec.ts", "*.test.ts"]
}
